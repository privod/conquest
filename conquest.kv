#:kivy 2.0.0

<GameObject>
    canvas:
        Color:
            rgba: self.background_color


<Legion>
    background_color: 0, 0, 0, 0.8
    size_hint: [0.5, 0.5]
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: root.label_text

<TurnLegionFlag>
    canvas:
        Color:
            rgb: 0, 1, 0, 0.8
        Line:
            width: 1
            points:
                self.x, self.y, self.x + self.width, self.y, self.x + self.width, self.y + self.height, self.x, self.y + self.height, self.x, self.y

<Emperor>
    background_color: 1, 0, 1, 0.8

<Capital>
    background_color: 1, 0, 1, 0.8

    canvas:
        Rectangle:
            pos: self.pos
            size: self.size


<Ocean>
    background_color: 0, 0, 1, 0.8

<Land>
    background_color:  0, 1, 0, 0.8

<Province>
    background_color:  1, 0, 0, 0.8

<Location>
    anchor_x: 'center'
    anchor_y: 'center'
    canvas:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size

<BarbarianAttack>
    canvas:
        Color:
            rgba: 0, 0, 0, 1
        Triangle:
            points: self.x, self.y, self.x + (self.width // 2), self.y + self.height,  self.x + self.width, self.y

<Cell>
    anchor_x: 'center'
    anchor_y: 'center'

<Map>
    padding: 1
    spacing: 1

<Info>
    year: 0
    taxes: 0
    size_hint: 1, 0.1
    canvas:
        Color:
            rgb: 1, 0, 0, 0.8
        Line:
            Rectangle:
                pos: self.pos
                size: self.size

    Label:
        text: 'Год: {}'.format(root.year)

    Label:
        text: 'Налоги: {}'.format(root.taxes)


<ConquestGame>
    orientation: 'vertical'

    map: map_id
    info: info_id

    Map:
        id: map_id

    Info:
        id:info_id