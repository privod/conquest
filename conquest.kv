#:kivy 2.0.0

<Emperor>
    background_color: 1, 0, 1, 0.8

<Legion>
    size_hint: [0.5, 0.5]
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size

<Capital>
    canvas:
        Color:
            rgba: 1, 0, 1, 0.8
        Rectangle:
            pos: self.pos
            size: self.size

<Province>
    background_color:  1, 0, 0, 0.8

<Ocean>
    background_color: 0, 0, 1, 0.8

<Location>
    anchor_x: 'center'
    anchor_y: 'center'
    canvas:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size
<Cell>
    anchor_x: 'center'
    anchor_y: 'center'

<Map>
    padding: 5
    spacing: 5

<ConquestGame>
    map: map_id

    Map:
        id: map_id